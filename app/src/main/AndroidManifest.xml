<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="maizn.fa.eservices.waterplant">

    <application
        android:name=".activities.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:label="@string/app_name" android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:label="@string/button_list_plants" android:name=".activities.ListPlantsActivity" />
        <activity android:label="activity_plant_detail" android:name=".activities.PlantDetailActivity" />
        <activity android:label="@string/button_add_plant" android:name=".activities.AddPlantActivity" />
        <activity android:label="@string/button_change_date" android:name=".activities.ChangeDateActivity"></activity>
    </application>

</manifest>